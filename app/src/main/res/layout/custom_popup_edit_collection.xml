<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:gravity="center"
        android:text="Change Collection Amount"
        android:textColor="@color/blue"
        android:textSize="@dimen/twenty_text" />

    <EditText
        android:id="@+id/edt_modified_amt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/thirty"
        android:layout_marginTop="@dimen/twenty"
        android:layout_marginRight="@dimen/thirty"
        android:background="@drawable/feedback_text_back"
        android:hint="Amount"
        android:inputType="number"
        android:padding="@dimen/ten"
        android:textColor="@color/blue"
        android:textColorHint="@color/midnight_black" />

    <Button
        android:id="@+id/btn_save_modified_amt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fifty"
        android:layout_marginTop="@dimen/twenty"
        android:layout_marginRight="@dimen/fifty"
        android:layout_marginBottom="@dimen/thirty"
        android:background="@drawable/back_button"
        android:text="Save"
        android:textSize="@dimen/Sixteen_text" />
</LinearLayout>