<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#039be5"
    android:orientation="vertical"
    tools:context=".AddCustomer">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/forty"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardElevation="@dimen/five">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add Customers"
            android:textColor="@color/white"
            android:textSize="@dimen/eighteen_text" />

    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearlayout_add_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linearlayout_customer_basic_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_marginRight="@dimen/ten">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_customer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Customer Name"
                        android:inputType="text"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_blue" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/ten">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_blue" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/ten">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_blue" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/ten">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_delivery_charges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Delivery Charges"
                        android:inputType="phone"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_blue" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/ten">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_flat_building"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Flat No./ Building Name"
                        android:inputType="text"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_blue" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/ten">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address"
                        android:inputType="text"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_blue" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:text="Send bills via"
                    android:textColor="@color/light_blue"
                    android:textSize="@dimen/Sixteen_text" />

                <CheckBox
                    android:id="@+id/cb_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:checked="true"
                    android:text="Message"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen_text" />

                <CheckBox
                    android:id="@+id/cb_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:checked="true"
                    android:text="Email"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen_text" />


                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="@dimen/one_fifty"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginBottom="@dimen/fifteen"
                    android:background="@color/blue"
                    android:gravity="center"
                    android:text="Next"
                    android:textSize="@dimen/fifteen_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayout_customer_paper_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_go_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go Back"
                    android:layout_marginLeft="@dimen/ten"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/ten"
                    android:textAlignment="center"
                    android:textSize="@dimen/fifteen_text"
                    android:drawableLeft="@drawable/back_img_white"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginRight="@dimen/ten">

                    <android.support.v7.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/add_paper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Add Paper " />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/twenty"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginEnd="@dimen/twenty"
                    android:layout_marginRight="@dimen/twenty"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_marginRight="@dimen/ten"
                        android:layout_weight=".5"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_minus"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/ten"
                            android:layout_weight=".1"
                            android:src="@drawable/minus" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ten"

                            >

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/edt_quantity"
                                android:layout_width="@dimen/hundred"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:clickable="false"
                                android:focusable="false"
                                android:hint="Quantity"
                                android:inputType="phone"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textColorHint="@color/light_blue" />
                        </android.support.design.widget.TextInputLayout>

                        <ImageView
                            android:id="@+id/iv_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/ten"
                            android:layout_weight=".1"
                            android:src="@drawable/plus" />
                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_marginTop="@dimen/ten"
                        android:layout_marginRight="@dimen/ten"
                        android:layout_weight=".5"
                        android:gravity="center">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_paper_price"
                            android:layout_width="@dimen/sixty"
                            android:layout_height="wrap_content"
                            android:hint="Price"
                            android:inputType="phone"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textColorHint="@color/light_blue" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radioBox_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:checkedButton="@id/rb_alldays">

                    <RadioButton
                        android:id="@+id/rb_alldays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Days" />

                    <RadioButton
                        android:id="@+id/rb_somedays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Specific Days" />

                </RadioGroup>

                <LinearLayout
                    android:id="@+id/linearlayout_specific_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty"
                    android:layout_marginTop="@dimen/five"
                    android:layout_marginRight="@dimen/twenty"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/day_mon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:text="Mon" />

                        <CheckBox
                            android:id="@+id/day_tues"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:text="Tues" />

                        <CheckBox
                            android:id="@+id/day_wed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:text="Wed" />

                        <CheckBox
                            android:id="@+id/day_thurs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:text="Thurs" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/day_fri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:text="Fri" />

                        <CheckBox
                            android:id="@+id/day_sat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:text="Sat" />

                        <CheckBox
                            android:id="@+id/day_sun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25"
                            android:text="Sun" />
                    </LinearLayout>
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/thirty"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/thirty"
                    android:layout_weight=".5">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:hint="Start paper date"
                        android:inputType="phone"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_blue"
                        tools:ignore="Deprecated" />

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btn_save_user"
                    android:layout_width="@dimen/one_fifty"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginBottom="@dimen/fifteen"
                    android:background="@color/blue"
                    android:gravity="center"
                    android:text="Save"
                    android:textSize="@dimen/fifteen_text" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>