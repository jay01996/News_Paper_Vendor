<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearlayout_monthly_report_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/five"
        android:weightSum="4">

        <TextView
            android:id="@+id/monthly_detail_c_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginTop="3dp"
            android:layout_weight="2"
            android:gravity="left"
            android:text="Customer"
            android:textColor="@color/black"
            android:textSize="@dimen/Sixteen_text" />

        <TextView
            android:id="@+id/monthly_detail_bill"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Bill"
            android:textColor="@color/black"
            android:textSize="@dimen/Sixteen_text" />

        <TextView
            android:id="@+id/monthly_detail_collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Collection"
            android:textColor="@color/black"
            android:textSize="@dimen/Sixteen_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/monthly_detail_papers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlayout_monthly_report_detail"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginTop="3dp"
        android:text="[Asian Age, Dainik Jagran]"
        android:textColor="@color/midnight_black"
        android:textSize="@dimen/Sixteen_text" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/monthly_detail_papers"
        android:layout_margin="@dimen/ten"
        android:background="@color/midnight_black" />

</RelativeLayout>
