<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/twenty">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
     >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginTop="3dp"
            android:text="Collection Completed."
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/twenty_five"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten">

                <TextView
                    android:id="@+id/bill_Detail_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".9"
                    android:text="Customer Name "
                    android:textColor="@color/blue"
                    android:textSize="@dimen/Sixteen_text" />

                <ImageView
                    android:id="@+id/bill_Detail_iv_option_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".1"
                    android:src="@drawable/menu_vertical" />
            </LinearLayout>

            <TextView
                android:id="@+id/bill_Detail_papers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten"
                android:text="[The Hindu, Dainik Jagran]"
                android:textColor="@color/midnight_black"
                android:textSize="@dimen/twelve_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/fifteen"
                android:background="@color/dim_white" />

            <TextView
                android:id="@+id/bill_Detail_cash_collected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten"
                android:text="@string/cash_collected_msg"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen_text" />

            <TextView
                android:id="@+id/bill_Detail_cash_advanced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten"
                android:text="@string/advanced_pay_msg"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen_text" />

            <Button
                android:id="@+id/bill_Detail_Edit_Collection"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/thirty"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginBottom="@dimen/twenty"
                android:background="@drawable/feedback_text_back"
                android:padding="@dimen/eight"
                android:text="Edit Collection"
                android:textColor="@color/blue"
                android:textSize="10sp" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
